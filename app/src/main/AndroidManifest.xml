<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".RoominateApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Roominate.Transparent"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- FileProvider for camera captured images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Splash Screen - Entry Point -->
        <activity
            android:name=".activities.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Roominate.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Auth Activities -->
        <activity android:name=".activities.auth.MainActivity" />
        <activity android:name=".activities.auth.WelcomeActivity" android:theme="@style/Theme.Roominate" />
        <activity android:name=".activities.auth.LoginActivity" />
        <activity android:name=".activities.auth.RegisterActivity" />
        <activity android:name=".activities.auth.EmailConfirmationActivity" />
        <activity android:name=".activities.auth.ForgotPasswordActivity" />
        <activity android:name=".activities.auth.RoleSelectionActivity" />
        <activity android:name=".activities.auth.SignUpBasicInfoActivity" />
        <activity android:name=".activities.auth.SignUpEmailActivity" />
        <activity android:name=".activities.auth.SignUpEmailVerificationActivity" />
        <activity android:name=".activities.auth.SignUpPasswordActivity" />
        <activity android:name=".activities.auth.SignUpWelcomeActivity" />
        <!-- Supabase OAuth redirect callback -->
        <activity
            android:name=".activities.auth.LoginCallbackActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Deep-link for Supabase OAuth redirect: com.roominate://login-callback -->
                <data android:scheme="com.roominate" android:host="login-callback" />
            </intent-filter>
        </activity>
        
        <!-- Tenant Activities -->
        <activity 
            android:name=".activities.tenant.TenantDashboardActivity"
            android:theme="@style/Theme.Roominate" />
        <activity android:name=".activities.tenant.SearchActivity" />
        <activity android:name=".activities.tenant.BoardingHouseDetailsActivity" />
        <activity android:name=".activities.tenant.BookingActivity" />
        <activity android:name=".activities.tenant.MyBookingsActivity" />
        <activity android:name=".activities.tenant.TenantProfileActivity" />
        <activity android:name=".activities.tenant.EditProfileActivity" />
        <activity android:name=".activities.tenant.SettingsActivity" />
        
        <!-- Owner Activities -->
        <activity android:name=".activities.owner.OwnerDashboardActivity" />
        <activity android:name=".activities.owner.AddPropertyActivity" />
        <activity android:name=".activities.owner.EditPropertyActivity" />
        <activity android:name=".activities.owner.ManageListingsActivity" />
        <activity android:name=".activities.owner.InquiriesActivity" />
        <activity android:name=".activities.owner.OwnerProfileActivity" />
        <activity android:name=".activities.owner.BookingDetailsActivity" />
        
        <!-- Common Activities -->
        <activity android:name=".activities.NotificationsActivity" />
        
        <!-- Admin Activities -->
        <activity android:name=".activities.admin.AdminDashboardActivity" />
        <activity android:name=".activities.admin.UserManagementActivity" />
        <activity android:name=".activities.admin.VerifyListingsActivity" />
        <activity android:name=".activities.admin.ContentModerationActivity" />
        
    </application>

</manifest>