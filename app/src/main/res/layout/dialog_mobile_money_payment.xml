<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Money Payment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete your payment to confirm booking"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- Amount Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to Pay"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/paymentAmountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="K0.00"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp" />

        <!-- Phone Number Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Phone Number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/paymentPhoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+260XXXXXXXXX"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="20dp" />

        <!-- Provider Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Mobile Money Provider"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/providerRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioMTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MTN Mobile Money"
                android:textSize="16sp"
                android:padding="12dp"
                android:checked="true" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioAirtel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Airtel Money"
                android:textSize="16sp"
                android:padding="12dp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioZamtel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zamtel Kwacha"
                android:textSize="16sp"
                android:padding="12dp" />

        </RadioGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- Payment Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Instructions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Dial your mobile money service code"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Send the exact amount shown above"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Make sure to use the phone number registered in your account"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. After completing the payment, click 'Confirm Payment' below"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Important Notice -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FF9800"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Please ensure you have completed the payment before clicking 'Confirm Payment'"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Confirm Payment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Payment"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="#2196F3"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="#666666"
            app:backgroundTint="#F5F5F5"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</ScrollView>
