<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Receipt"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/bookingIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking ID: #12345"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/receiptStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="20dp" />

        <!-- Property Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/receiptPropertyImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_house_placeholder" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Property Details -->
        <TextView
            android:id="@+id/receiptPropertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/receiptPropertyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="20dp" />

        <!-- Booking Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Move-in Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Move-in Date"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptMoveInDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 15, 2025"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 months"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Move-out Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Move-out Date"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptMoveOutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jul 15, 2025"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Booking Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booked On"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptBookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 20, 2024"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="20dp" />

        <!-- Payment Breakdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Summary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Monthly Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monthly Rent"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptMonthlyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K1,500"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Security Deposit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security Deposit"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptSecurityDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K1,500"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="12dp" />

        <!-- Total Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Amount"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receiptTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K10,500"
                android:textColor="#2B9D9D"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Contact Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Contact"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Person"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptContactPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone Number"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/receiptContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+260 XXX XXX XXX"
                android:textColor="#2B9D9D"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Close"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2B9D9D"
            android:layout_marginTop="24dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</ScrollView>
