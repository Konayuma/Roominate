<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".activities.auth.RoleSelectionActivity">

    <!-- Main Container with light blue background -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_role_container"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <!-- Tenant Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tenantCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ownerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Blue circle background for tenant icon -->
                <ImageView
                    android:id="@+id/tenantCircle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/circle_tenant_bg"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Tenant bed icon -->
                <ImageView
                    android:id="@+id/tenantIcon"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_tenant_bed"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Radio button and text container -->
                <RadioButton
                    android:id="@+id/tenantRadio"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:button="@drawable/radio_selector"
                    android:layout_marginStart="60dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am a tenant"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="82dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Owner Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ownerCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tenantCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.85">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Yellow/green circle background for owner icon -->
                <ImageView
                    android:id="@+id/ownerCircle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/circle_owner_bg"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Owner clipboard icon -->
                <ImageView
                    android:id="@+id/ownerIcon"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_owner_clipboard"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Radio button and text container -->
                <RadioButton
                    android:id="@+id/ownerRadio"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:button="@drawable/radio_selector"
                    android:layout_marginStart="58dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am an owner"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="80dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continueButton"
        style="@style/Widget.Roominate.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="Continue"
        android:textSize="14sp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
