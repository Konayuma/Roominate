<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.auth.WelcomeActivity">

    <!-- Full gradient background from teal to white -->
    <View
        android:id="@+id/gradientBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_welcome_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Individual stars positioned around the bed -->
    <ImageView
        android:id="@+id/star1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="48dp" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginStart="72dp" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="68dp" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="96dp" />

    <ImageView
        android:id="@+id/star6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:id="@+id/star7"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_star_sparkle"
        android:contentDescription="star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="48dp" />

    <!-- Bed illustration centered -->
    <ImageView
        android:id="@+id/illustrationImageView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/bed"
        android:contentDescription="@string/bedroom_illustration"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tagline on white background -->
    <TextView
        android:id="@+id/taglineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:text="@string/welcome_tagline"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@id/illustrationImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Get Started Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpButton"
        style="@style/Widget.Roominate.Button.Primary"
        android:layout_width="260dp"
        android:layout_marginTop="24dp"
        android:text="Get started"
        app:layout_constraintTop_toBottomOf="@id/taglineTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Already Have Account Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton"
        style="@style/Widget.Roominate.Button.Secondary"
        android:layout_width="260dp"
        android:layout_marginTop="12dp"
        android:text="I already have an account"
        app:layout_constraintTop_toBottomOf="@id/signUpButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Terms and Privacy Text -->
    <TextView
        android:id="@+id/termsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/terms_privacy_text"
        android:textSize="10sp"
        android:textColor="#666666"
        android:fontFamily="sans-serif"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/signInButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
